IF
	CombatCounter(0) !See([ENEMY]) InParty("C#Ajantis")
	Detect("C#Ajantis") 
	!StateCheck(Myself,CD_STATE_NOTVALID)
	!StateCheck("C#Ajantis",CD_STATE_NOTVALID)
	!Dead("C#Ajantis")
	OR(5)
		Global("C#AjantisMinsc4Area","GLOBAL",1)
		Global("C#AjantisMinsc4Area","GLOBAL",2)
		Global("C#AjantisMinsc4Area","GLOBAL",3)
		Global("C#AjantisMinsc4Area","GLOBAL",4)
		Global("C#AjantisMinsc4Area","GLOBAL",5)
	RealGlobalTimerExpired("C#AjantisMinsc4Timer","GLOBAL")
THEN

	RESPONSE #100
		SetGlobal("C#AjantisMinsc4Area","GLOBAL",6)
		RealSetGlobalTimer("C#AjantisNPCBanterTimer","GLOBAL",2000) //2000
		StartDialogNoSet("C#Ajantis") 
END 