//Minsc - Ajantis wilderness banter

IF //trace if 
	!AreaCheck("AR2600") //Thetyr Woods
	Global("C#AjantisMinsc4Area","GLOBAL",1)
THEN

	RESPONSE #100
		SetGlobal("C#AjantisMinsc4Area","GLOBAL",0)
END 

IF
	AreaCheck("AR2600") //Thetyr Woods
	InParty("C#Ajantis")
	!Dead("C#Ajantis")
	Global("C#AjantisMinsc4Area","GLOBAL",0)
THEN

	RESPONSE #100
		SetGlobal("C#AjantisMinsc4Area","GLOBAL",1)
		RealSetGlobalTimer("C#AjantisMinsc4Timer","GLOBAL",1200) //1200
END 

